<Window x:Class="Handguard.Client.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Handguard.Client.ViewModels"
        xmlns:local="clr-namespace:Handguard.Client.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource CustomWindowStyle}"
        Title="Settings" Height="300" Width="400">

    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>

    <Grid VerticalAlignment="Center" Margin="50">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Server address:" FontWeight="Bold"/>
                <Label Content="{Binding Host}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Connected to server:" FontWeight="Bold"/>
                <Label Content="{Binding Online}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
