<Window x:Class="Handguard.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Handguard.Client"
        xmlns:vm="clr-namespace:Handguard.Client.ViewModels"
        xmlns:views="clr-namespace:Handguard.Client.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Style="{DynamicResource CustomWindowStyle}"
        Title="{Binding Title}" Height="300" Width="400">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" BorderThickness="0" Style="{StaticResource BorderButton}" Command="{Binding SettingsCommand}" Height="30" Width="30">
                <Path Stretch="Uniform" Fill="White" Width="15" Height="15" Data="{StaticResource Settings}"/>
            </Button>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <views:UploadView Grid.Column="0" Margin="50,0,0,0"/>
            <views:DownloadView Grid.Column="1" Margin="0,0,50,0"/>
        </Grid>
    </Grid>
</Window>
